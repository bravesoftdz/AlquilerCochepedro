procedure TForm2.Timer1Timer(Sender: TObject);
var
contador :integer;
begin
if contador=5 then
    contador:= 0;
case contador of
 0:image1.Picture.LoadFromFile('p4.jpg');
 1:image1.Picture.LoadFromFile('p4.jpg');
 2:image1.Picture.LoadFromFile('p1.jpg');
 3:image1.Picture.LoadFromFile('p4.jpg');
 4:image1.Picture.LoadFromFile('p2.jpg');
end;
 inc(contador);
end;

